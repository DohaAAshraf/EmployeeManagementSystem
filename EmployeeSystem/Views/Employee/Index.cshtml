@model IEnumerable<dynamic> 


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Seq. No</th>
                <th>ID</th>
                <th>Name</th>
                <th>Position</th>
                <th>Department</th>
                <th>Email</th><!-- New Email Column -->
                <th>Salary</th> 
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var employee in Model.OrderBy(e => e.EmployeeID))
                {
                    <tr>
                        <td>@employee.DisplayID</td>
                        <td>@employee.EmployeeID</td> <!-- Displaying Employee ID -->
                        <td>@employee.Name</td>
                        <td>@employee.Position</td>
                        <td>@employee.Department</td> <!-- Displaying Department -->
                        <td>@employee.Email</td> <!-- Displaying Email -->
                        <td>@employee.Salary</td> <!-- Displaying Salary -->

                        <td>

                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-warning btn-sm">
                                Edit
                            </a>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeID" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                            <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.EmployeeID" class="btn btn-info btn-sm">
                                Details
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No employees found. Please check back later.</td> <!-- Updated colspan -->
                </tr>
            }
        </tbody>
    </table>
</div>
