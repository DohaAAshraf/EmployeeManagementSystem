@model EmployeeSystem.Models.EmployeeModel

<h2>Employee Details</h2>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Employee ID</dt>
        <dd class="col-sm-10">@Model.EmployeeID</dd>
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>
        <dt class="col-sm-2">Email</dt> <!-- Added Email label -->
        <dd class="col-sm-10">@Model.Email</dd> <!-- Added Email value -->
        <dt class="col-sm-2">Salary</dt> <!-- Added Salary label -->
        <dd class="col-sm-10">@Model.Salary.ToString("C")</dd> <!-- Added Salary value formatted as currency -->
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
